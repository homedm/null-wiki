{{ define "header" }}
<!DOCTYPE html>
<html>
<head>
    <title>Null wiki</title>
    <link rel="stylesheet" href="../data/css/style.css" type="text/css">
</head>
<body>
    <header>
        <h1>Null Wiki</h1>
        <hr/>
        {{ template "menu_list" . }}
    </header>
{{ end }}

{{ define "footer" }}
<footer>
    {{ template "menu_list" . }}
    {{ template "page_list" }}
</footer>
</body>
</html>
{{end}}


{{ define "page_list" }}
<div class="page_list">
    <h1>Latest Updated Pages</h1>
    <nav>
        <ul>
            {{ range getLatestPage }}
            <a href="/view/{{ . }}"><li>{{ . }}</li></a>
            {{ end }}
        </ul>
    </nav>
</div>
{{ end }}

{{ define "menu_list" }}
<nav class="horizon-list header-menu-list">
    <ul>
        <li><a href="/">frontPage</a></li>
        <li><a href="/view/{{.}}">Reload</a></li>
        <li><a href="/edit/{{.}}">Edit</a></li>
        <li><a href="/chatroom/">ChatRoom</a></li>
    </ul>
</nav>
{{ end }}
